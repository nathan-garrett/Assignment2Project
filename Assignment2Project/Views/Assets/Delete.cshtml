@model Assignment2Project.Models.AssetsModel

@{
    ViewData["Title"] = "Delete";
}


<h3>Are you sure you want to delete this Asset?</h3>
<div> 
    
    <dl class="row mt-5">
        <dt class = "col-sm-2">
            <a>Assest Name</a>          
        </dt>
        <dd class="col-sm-10">
            <p>@Model.AssetName</p>          
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AssetId" />
        <input type="submit" value="Yes" class="btn btn-success me-2" />
        <a class="btn btn-danger"asp-action="Index">No</a>
    </form>
</div>
