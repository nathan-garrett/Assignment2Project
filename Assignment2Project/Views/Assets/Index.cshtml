@model IEnumerable<ReportManagementSystem.Models.AssetsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Assets</h1>


<div class="contrainer-fuild">
    <div class="row">
        <form asp-action="Index">
            <div class="col-6 mt-5">
                <div class="input-group mx-4">
                    <input type="text" name="SearchBy" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="btn-search">
                    <button class="btn btn-dark" type="submit" id="button-search"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        @foreach (var asset in Model)
        {
            <div class="col-md-4">
                <div class="item w-100">
                    <div class="polaroid">
                        <a asp-action="Delete" asp-route-id="@asset.AssetId"><i class="bi bi-x"></i></a>                       
                        <div class="caption">@asset.AssetName <a asp-action="Edit" asp-route-id="@asset.AssetName"><i class="bi bi-gear"></i></a></div>
                    </div>
                </div>
            </div>

        }

    </div>
</div>

<p>
    <a asp-action="Create">Create New Asset</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AssetName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssetName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AssetId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AssetId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AssetId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
