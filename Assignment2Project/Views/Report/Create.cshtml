@model Assignment2Project.ViewModel.ReportViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Open a new ticket</h1>
<hr />
<div class="row">

    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Report.RType" class="control-label"></label>
                <select asp-for="Report.RType" class="form-control" value="1">
                    <option asp-for="Report.RType" value="1">General</option>
                    <option asp-for="Report.RType" value="2">Technical</option>
                </select>
                <span asp-validation-for="Report.RType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.WhoReportedIssue" class="control-label"></label>
                @Html.DropDownListFor(m => m.Report.WhoReportedIssue, Model.PersonList, "Select a Person (if applicable)", new { @class = "form-select" })
                <span asp-validation-for="Report.WhoReportedIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Report.IssueDetails" class="control-label"></label>
                <input asp-for="Report.IssueDetails" class="form-control" />
                <span asp-validation-for="Report.IssueDetails" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Report.Asset" class="control-label"></label>
                @Html.DropDownListFor(m => m.Report.AssetId, Model.AssetList, "Select an Asset", new { @class = "form-select" })
                <span asp-validation-for="Report.AssetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-dark mt-3" />
            </div>

        </form>
        <div>
    <a class="btn btn-dark mt-3" asp-action="Index">Back to List</a>
</div>

</div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
