@using Assignment2Project.Models
@model List<Assignment2Project.Models.UserRolesModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Roles</h1>

<div class="contrainer-fuild mt-3">
    <div class="row">
        <h2>Search for an existing report</h2>
        <form asp-action="Index">
            <div class="col-6">
                <div class="input-group">
                    <input type="text" name="SearchBy" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="btn-search">
                    <button class="btn btn-dark" type="submit" id="button-search"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td>@user.Email</td>
            <td>@string.Join(" , ", user.Roles.ToList())</td>
            <td>
                <a class="btn btn-dark" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.UserId">Manage Roles</a>
            </td>
            <td>
                <a class="btn btn-dark" asp-controller="UserRoles" asp-action="Delete" asp-route-userId="@user.UserId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>